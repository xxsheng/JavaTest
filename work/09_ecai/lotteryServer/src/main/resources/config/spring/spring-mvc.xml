<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd 
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.1.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

	<!-- 默认的注解映射的支持 -->
	<mvc:annotation-driven />
	
	<!-- SCAN PACKAGE -->
	<context:component-scan base-package="lottery.web.content" />
	<context:component-scan base-package="activity.web.content" />

	<!-- 视图解释类 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/pages/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	<!-- 拦截器 -->
	<mvc:interceptors>
		<bean class="lottery.web.helper.interceptors.AuthenticateAccountInterceptor" />
	</mvc:interceptors>

	<!-- 拦截除了已经定义的规则，其他全部转向静态文件夹。 -->
	<mvc:resources mapping="/**" location="/" order="2147483647" />
</beans>